#element.selected {
  border: 1;
  border-radius: 4px;
}

#element.selected.normal {
  border-color: @foreground;
}

#element.selected.urgent {
  border-color: @urgent;
}

#element.selected.active {
  border-color: @active;
}

#element-icon {
  size: 24px;
  padding: 0 16px 0 0;
}

#element-text {
  vertical-align: 0.5;
}

#scrollbar {
  width: 4px;
  border: 0;
  handle-width: 8px;
  padding: 0;
}

#sidebar {
  border: 2px 0px 0px;
  border-color: @border-color;
}

#button {
  text-color: @foreground;
}

#inputbar {
  spacing: 0;
  text-color: @foreground;
  padding: 1px;
}

#case-indicator {
  spacing: 0;
  text-color: @foreground;
}

#entry {
  spacing: 0;
  text-color: @foreground;
}

#prompt {
  spacing: 0;
  text-color: @foreground;
}

