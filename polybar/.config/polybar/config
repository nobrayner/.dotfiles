[colors]
background = #88000000
foreground = #fff
color0 = ${xrdb:color0}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}

[bar/main]
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = FiraCode Nerd Font:size=12;2

height = 24
width = 100%:-12
offset-x = 12

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${colors.background}
tray-offset-x = -12
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0

modules-left = workspaces cpu memory music
modules-center = clock
;Don't set any right modules - save for tray
modules-right = 

[module/workspaces]
type = internal/xworkspaces
enable-click = false
enable-scroll = false

format-background = ${colors.color1}

format = <label-state>
format-padding = 1

label-active = 
label-occupied = 
label-urgent = 
label-empty = 

label-active-foreground = ${colors.foreground}
label-urgent-foreground = ${colors.foreground}
label-occupied-foreground = ${colors.color6}
label-empty-foreground = ${colors.color6}

label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

[module/clock]
type = internal/date
interval = 1.0
date = %d/%m/%y
time = %I:%M %P
label = %time%

format-padding = 2
;format-background = ${colors.color4}
;format-foreground = ${colors.foreground}

[module/memory]
type = internal/memory

; Seconds to sleep between updates
; Default: 1
interval = 1

; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
;   <ramp-used>
;   <ramp-free>
;   <bar-swap-used>
;   <bar-swap-free>
;   <ramp-swap-used>
;   <ramp-swap-free>
format = <label>
format-prefix = " "
format-padding = 2
format-background = ${colors.color3}

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%
label = " %percentage_used%% (%mb_used%)"

[module/cpu]
type = internal/cpu

interval = 1

format = <label>
format-padding = 2
format-prefix = " "
format-background = ${colors.color2}

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = " %percentage%%"

[module/music]
type = custom/script
exec = ~/.config/polybar/scripts/music.sh
interval = 1
format-padding = 2
format-prefix = "  "
