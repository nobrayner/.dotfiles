#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find /w/* /p/g/* ~/.dotfiles -mindepth 1 -maxdepth 2 -name .git -type d -exec dirname {} \; | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

# Create new session if it doesn't exist
if ! tmux has-session -t=$selected_name 2> /dev/null; then
    # Decide what to run in the Editor window
    if [[ -f "$selected/Session.vim" ]]; then
        editor_cmd="bash -i -c 'nvim -S'"
    else
        editor_cmd="bash -i -c 'nvim .'"
    fi

    tmux new-session -ds $selected_name -c $selected -n "Editor"
    tmux send-keys -t "$selected_name:Editor" "$editor_cmd" C-m

    tmux new-window -t "$selected_name" -c "$selected" -n "Run"

    tmux new-window -t "$selected_name" -c "$selected" -n "Shell"

    tmux move-window -s "$selected_name:Editor" -t "$selected_name:1"
    tmux select-window -t "$selected_name:1"
fi

if [[ -z $TMUX ]]; then
    # Outside tmux → attach this terminal to the session
    tmux attach-session -t "$selected_name"
else
    # Inside tmux → just switch the current client
    tmux switch-client -t "$selected_name"
fi
