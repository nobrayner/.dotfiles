#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
super + Return
  kitty

# program launcher
super + p
	rofi -show drun -modi drun

# browser
super + b
	brave-browser

# music player
super + m
  /opt/tidal-hifi/tidal-hifi

super + ctrl + m
  playerctl -p tidal-hifi play-pause

super + ctrl + c
  playerctl -p tidal-hifi next

super + ctrl + x
  playerctl -p tidal-hifi previous

# screen off / lockscreen
super + ctrl + l
  sleep 1; xset dpms force off

# Init main apps
super + ctrl + shift + i
  slack &; \
  sleep 1; \
  /opt/tidal-hifi/tidal-hifi

Print
  flameshot gui --clipboard --accept-on-select

shift + Print
  flameshot gui --clipboard

super + alt + ctrl + m
  amixer set Capture toggle

super + alt + ctrl + shift + m
  amixer set Master toggle

#
# bspwm hotkeys
#

# layout(ish)
super + shift + ctrl + t
  bspc node @/ -r 0.5765

super + shift + ctrl + s
  ~/.config/bspwm/toggle-stream-mode.sh; \
  bspc wm -r

# restart bspwm
super + ctrl + shift + r
	bspc wm -r

# quit bspwm
super + ctrl + shift + q
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# rotate node
super + ctrl + r
  bspc node @parent --rotate 90

super + ctrl + {c, shift + c}
  bspc node @parent --circulate {forward, backward}

super + ctrl {f, shift + f}
  bspc node @parent --flip {horizontal, vertical}

super + ctrl + e
  bspc node @parent --equalize

super + ctrl + b
  bspc node @parent --balance

super + ctrl + i
  bspc node --insert-receptacle

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{0-8,9}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}; {1-9}
	bspc node -p {west,south,north,east} -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel
